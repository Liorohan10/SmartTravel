# Server
PORT=5000
CLIENT_ORIGIN=http://localhost:5173

# Gemini
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-1.5-flash

# LiteAPI Configuration
# Official LiteAPI V3 endpoint
LITEAPI_BASE_URL=https://api.liteapi.travel/v3.0
LITEAPI_KEY=your_liteapi_key_here

# Security & Performance
LITEAPI_TIMEOUT_MS=20000
LITEAPI_USE_SECURE_AUTH=false
LITEAPI_SECRET_KEY=your_hmac_secret_key_for_secure_auth

# Optional: Custom auth configuration (usually not needed for official LiteAPI)
# LITEAPI_AUTH_HEADER_NAME=X-API-Key
# LITEAPI_AUTH_SCHEME=apikey
